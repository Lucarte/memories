{
    "version": 2,
    "builds": [
      {
        "src": "package.json",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "public/build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "/public/index.php"
      },
      {
        "src": "/(.*)",
        "dest": "/public/build/$1"
      }
    ]
  }
  