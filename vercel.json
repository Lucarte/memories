{
    "version": 2,
    "builds": [
      {
        "src": "public/index.php",
        "use": "@vercel/php"
      },
      {
        "src": "resources/js/*",
        "use": "@vercel/static-build",
        "config": {
          "distDir": "public/build"
        }
      }
    ],
    "routes": [
      {
        "src": "/api/(.*)",
        "dest": "public/index.php"
      },
      {
        "src": "/(.*)",
        "dest": "/public/build/$1"
      }
    ]
  }
  